<%- include page/header %>
		<div class="row">
			<div class="col-md-12 column">
				<div class="panel panel-primary">
					<div class="panel-heading"><span class="glyphicon glyphicon-edit"></span> 水閥開關設定</div>
					<div class="panel-body">
						<form id="editDevice" class="form-horizontal" action="" method="post">
							<fieldset>
								<!-- Name input-->
								<div class="col-md-6 column">
									<div class="form-group">
										<label class="col-md-3 control-label" for="name">濕度超過</label>
										<div class="col-md-9">
											<input id="max" name="max" type="text" placeholder="請輸入最高濕度" value="<%= max %>" class="form-control" required/>
										</div>
									</div>

									<!-- Email input-->
									<div class="form-group">
										<label class="col-md-3 control-label" for="email">濕度低於</label>
										<div class="col-md-9">
											<input id="min" name="min" type="text" placeholder="請輸入最低濕度" value="<%= min %>" class="form-control" required/>
										</div>
									</div>
								</div>
								<div class="col-md-6 column">
									<!-- Type select-->
									<div class="form-group">
										<label class="control-label" for="type">關水閥</label>
										</div>
									</div>

									<!-- Email input-->
									<div class="form-group">
										<label class="control-label" for="name">開水閥</label>
									</div>
									<button type="button" id="edit" name="edit" class="btn btn-primary btn-sm" onClick="editCheck(this)">
										<span class="glyphicon glyphicon-edit"></span> 設定
									</button>
								</div>

							</fieldset>
						</form>
					</div>
				</div>

			</div><!--/.col-->

		</div><!--/.row-->
		<div class="col-md-12 column">
				<div class="panel panel-primary">
					<div class="panel-heading"><span class="glyphicon glyphicon-edit"></span>手動控制 </div>
					<div class="panel-body">
						<div class="col-md-2 column">
							<button type="button" id="edit" name="edit" class="btn btn-success btn-sm" onClick="openLigt(this)">
								<span class="glyphicon glyphicon-volume-up"></span> 開水閥
							</button>
						</div>
						<div class="col-md-2 column">
							<button type="button" id="del" name="del" class="btn btn-danger btn-sm " onClick="closeLight(this)">
								<span class="glyphicon glyphicon-volume-off"></span> 關水閥
							</button>
						</div>
					</div>
				</div>

		</div><!--/.col-->


<%- include page/footer %>